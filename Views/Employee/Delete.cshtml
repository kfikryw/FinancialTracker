

@{
    ViewData["Title"] = "Delete Confirmation";
}
@model SpendSmart.Models.Employee
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg border-0 p-4 text-center">
        <h3 class="text-danger fw-bold">Are you sure?</h3>
        <p class="text-muted">This action cannot be undone.</p>

        <form asp-asp-controller="Employee" asp-action="Delete" method="post">
            <input asp-for="Id" class="d-none" />
            <div class="d-flex justify-content-center gap-3 mt-3">
                <button type="submit" class="btn btn-danger px-4">Delete</button>
                <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .card {
        max-width: 400px;
        border-radius: 12px;
    }
</style>
